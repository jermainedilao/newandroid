<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jermaine.newandroid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.jermaine.newandroid.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.jermaine.newandroid.uicontroller.activity.repolist.RepoListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.jermaine.newandroid.uicontroller.activity.viewitem.ViewItemActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.jermaine.newandroid.uicontroller.activity.additem.AddRepoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>